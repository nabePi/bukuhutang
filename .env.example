# WhatsApp Admin Configuration
ADMIN_PHONE_NUMBER=081254653452

# Security (REQUIRED)
# API_KEY: Used by OpenClaw to authenticate when calling BukuHutang endpoints
API_KEY=bukuhutang_openclaw_2026_secure

# SUPER_ADMIN_API_KEY: Used for admin dashboard login
SUPER_ADMIN_API_KEY=your-super-secret-admin-key-change-this

